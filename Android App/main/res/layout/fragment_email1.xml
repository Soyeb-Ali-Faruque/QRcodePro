<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact_us.Email1Fragment">

    <!-- LinearLayout to stack items vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_url="https://lottie.host/3c97fa71-5fbb-4c57-903e-636321d8388e/OobWtxmveZ.lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginBottom="16dp" /> <!-- Space between the animation and text/button -->

        <!-- Message below the animation -->
        <TextView
            android:id="@+id/emailAppNotFoundMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email app not found"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" /> <!-- Space between the text and the button -->

        <!-- Go Back Button -->
        <Button
            android:id="@+id/goBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:onClick="goBack" />

    </LinearLayout>

</FrameLayout>
